{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_details'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_category_details'|trans({'%id%': category.id|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <div class="container">
            <div class="col"></div>
            <div class="col">
                <table class="table table-striped category_table">
                    <thead>
                        <tr>
                            <th>{{ 'label_id'|trans }}</th>
                            <th>{{ 'label_title'|trans }}</th>
                            <th>{{ 'label_created_at'|trans }}</th>
                            <th>{{ 'label_updated_at'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.title }}</td>
                            <td>{{ category.createdAt|format_date('long') }}</td>
                            <td>{{ category.updatedAt|format_date('long') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        <div class="col"></div>
        </div>
        <div class="text-center d-flex justify-content-center">
            <a class="btn btn-primary btn-alter " href="{{ url('category_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </div>

    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}