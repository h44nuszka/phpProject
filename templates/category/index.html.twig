{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_category_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
        <div class="container">
            <ul class="row nav nav-pills">
                <li><a href="{{ url('category_create') }}" class="btn btn-primary btn-alter" title="{{ 'label_add'|trans }}">
                        <i class="bi bi-calendar-plus"></i>
                    </a></li>

            </ul>
            <div class="col"><br></div>
            <div class="col">
                <table class="table table-striped category_table">
                    <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'category.title') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'label_created_at'|trans, 'category.createdAt') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'label_updated_at'|trans, 'category.updatedAt') }}</th>
                            <th>{{ 'label_actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in pagination.items %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.title }}</td>
                            <td>{{ category.createdAt|format_date('long') }}</td>
                            <td>{{ category.updatedAt|format_date('long') }}</td>

                            <td>
                                <a href="{{ url('category_show', {id: category.id}) }}" title="{{ 'action_view'|trans }}" class="iconlink">
                                    <i class="bi bi-file-check"></i>
                                </a>

                                <a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action_edit'|trans }}" class="iconlink">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% if not category.events|length %}
                                    <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action_delete'|trans }}" class="iconlink">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col"></div>
        </div>
        <div class="navigation text-center d-flex justify-content-center paginator-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'warning',
            message: 'message_empty_list'|trans

            } %}
    {% endif %}
{% endblock %}