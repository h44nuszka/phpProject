{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_tag_create'|trans }}
{% endblock %}

{% block body %}
    <div class="form_placer">
        <h1>{{ 'title_tag_create'|trans }}</h1>
        {{ form_start(form, { method: 'POST', action: url('tag_create') }) }}
        {{ form_widget(form) }}

        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('tag_create') }}" class="btn btn-primary">
                {{ 'action_back'|trans }}
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}