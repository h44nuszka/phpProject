{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_delete'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="form_placer">
        <h1>{{ 'title_event_delete'|trans({'%id%': event.id|default('')}) }}</h1>
        {{ form_start(form, { method: 'DELETE', action: url('event_delete', {id: event.id}) }) }}
        <p>{{ 'message_delete_confirmation'|trans }}</p>
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action_delete'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('event_index') }}" class="btn btn-link">
                {{ 'action_back_to_list'|trans }}
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}