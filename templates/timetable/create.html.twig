{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_create'|trans }}
{% endblock %}

{% block body %}
    <div class="form_placer">
        <h1>{{ 'title_event_create'|trans }}</h1>
        {{ form_start(form, { method: 'POST', action: url('event_create') }) }}
        {{ form_widget(form) }}

        <p>
            <a href="{{ url('tag_index') }}" class="btn btn-primary">
                {{ 'label_show_tags'|trans }}
            </a>
            <a href="{{ url('tag_create') }}" class="btn btn-primary">
                {{ 'label_add_tag'|trans }}
            </a>
        </p>
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('event_index') }}" class="btn btn-primary">
                {{ 'action_back_to_list'|trans }}
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}