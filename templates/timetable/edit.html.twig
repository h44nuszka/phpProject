{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_edit'|trans }}
{% endblock %}

{% block body %}
    <div class="form_placer">
        <h1>{{ 'title_event_edit'|trans }}</h1>
        {{ form_start(form, { method: 'PUT', action: url('event_edit', {id: event.id}) }) }}
        {{ form_widget(form) }}

        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('event_index') }}" class="btn btn-primary">
                {{ 'action_back_to_list'|trans }}
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}