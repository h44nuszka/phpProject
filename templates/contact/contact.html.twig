{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_this_contact'|trans }}
{% endblock %}

{% block body %}
    {% if usersData is defined and usersData|length %}
        <div class="container">
            <div class="row">
                <div class="col align-self-center">
                    <div class="card big-card">
                        <div class="card-body">
                            <h5 class="card-title">{{ usersData.name }} {{ usersData.surname }} </h5>
                            {% if usersData.nick|length > 0 %}
                                <p class="card-text card-desc contact-card">({{ usersData.nick }})</p>
                            {% else %}
                                <p class="card-text card-desc contact-card"><br></p>
                            {% endif %}
                            <p class="card-text card-desc contact-card">{{ 'label_phone_number'|trans }}: {{ usersData.phoneNumber }}</p>
                            <p class="card-text card-desc">{{ 'label_birth_date'|trans }}: {{ usersData.birthDate|format_date('long') }}</p>

                            <a href="{{ url('contact_index') }}" class="btn btn-primary">{{ 'action_back_to_list'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p>
            {{ 'message_record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}